{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // Set the base URL for path mapping
    "paths": {
      "@/*": ["./*"],
      "@/navigation/*": ["navigation/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "Loading.tsx" // Ensure this file is included
  ]
}
